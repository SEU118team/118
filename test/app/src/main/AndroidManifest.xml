        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".listview.ListViewActivity"></activity>
        <activity android:name=".fatie.PostActivity" />
        <activity android:name=".fatie.MyInfoActivity" />
        <activity android:name=".Login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.RegisterActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".TieZiActivity" />
        <activity android:name=".MyTieziActivity" />
        <activity android:name=".SocketActivity"></activity>
