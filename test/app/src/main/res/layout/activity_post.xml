<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!--主题-->
    <LinearLayout
        android:id="@+id/ll_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_theme"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="主题"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/et_theme"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/fatie_selector_edit"
            android:maxLength="50"
            android:singleLine="true"/>
    </LinearLayout>

    <!--标签-->
    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="标签"
            android:textSize="20dp"/>

        <Spinner
            android:id="@+id/sp_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:entries="@array/TAG" />

    </LinearLayout>

    <!--联系方式-->
    <LinearLayout
        android:id="@+id/ll_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_connection"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/et_connection"
            android:background="@drawable/fatie_selector_edit"
            android:maxLength="50"
            android:singleLine="true"/>
    </LinearLayout>

    <!--备注-->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_ps"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="50dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ps"
        android:text="备注"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:inputType="textMultiLine"
        android:maxLines="20"
        android:id="@+id/et_ps"
        android:background="@drawable/fatie_selector_edit"
        android:hint="关于物品的描述"
        android:gravity="top" />
  </LinearLayout>

    <!--发帖按钮-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/rl_button">
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_post"
            android:text="确认发帖"
            android:textSize="20dp"
            android:background="@drawable/fatie_selector_btn"/>
    </RelativeLayout>
</LinearLayout>